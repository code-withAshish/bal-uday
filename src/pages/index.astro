---
import { Image } from "astro:assets";
import Layout from "../layouts/Layout.astro";
import HeroImage from "../assets/HeroImage.png";
import AboutUsImage from "../assets/AboutUs.png";
import "@splidejs/splide/css/core";
import ImageCarousel from "../components/ImageCarousel.svelte";
---

<Layout title="Bal Uday">
  <main class="">
    <section id="hero" class="md:py-16 py-10 md:px-0">
      <div class="flex flex-col md:flex-row items-start justify-between">
        <div class="basis-full md:basis-2/3 px-4 md:px-20 py-10 md:py-32">
          <div class="leading-10">
            <span class="text-3xl font-semibold">Bal Uday</span>
            <br />
            <span
              class="text-5xl md:text-6xl font-extrabold text-primary-yellow leading-[50px] md:leading-[60px]"
            >
              <span
                >Brighter <span class="text-primary-green">Future,</span>
              </span>
              <p>Empowered Children!</p>
            </span>
            <span class="text-lg font-semibold py-4 block"
              >Nurturing children and communities through education and support.</span
            >
            <div>
              <button
                class="bg-primary-green text-white text-lg font-semibold rounded-md p-3 px-6 my-3"
                >Learn More</button
              >
            </div>
          </div>
        </div>
        <div class="w-full md:w-auto">
          <Image src={HeroImage} alt="Bal Uday" class="max-w-full h-auto"/>
        </div>
      </div>
    </section>
    <section id="about-us" class="space-y-10 px-4 md:px-20 py-10 md:py-0">
      <div class="text-center">
        <span class="text-5xl md:text-6xl font-extrabold text-stone-800"
          >About <span class="text-primary-yellow">Us</span></span
        >
      </div>
      <div class="flex flex-col md:flex-row items-center justify-between gap-8">
        <div class="basis-full md:basis-1/2">
          <div class="md:p-8">
            <Image src={AboutUsImage} alt={"standing boy"} class="max-w-full h-auto"/>
          </div>
        </div>
        <div class="basis-full md:basis-1/2 text-base md:text-lg lg:text-2xl leading-9 md:p-8">
          Bal Uday is a non-profit trust dedicated to spreading awareness about
          child rights among children, parents, teachers, and nodal officers.
          Our mission is to educate and empower communities to ensure the safety
          and well-being of every child.
          <br />
          <br />
          Our two-tier program targets both adults (teachers, parents, and nodal
          officers) and children, providing education about legal rights and protections
          under acts like the POSCO Act and the Juvenile Justice Act. We aim to prevent
          exploitation and provide avenues for redressal through proper legal channels.
          <br />
          <button
            class="bg-primary-yellow text-white text-lg font-semibold rounded-md p-3 px-6 my-5"
            >Know More</button
          >
        </div>
      </div>
    </section>
    <section id="workshops" class="py-10">
      <div class="text-center">
        <span class="text-5xl md:text-6xl font-extrabold text-stone-800"
          ><span class="text-[#C69C6D]">Work</span>shops</span
        >
      </div>
      <div class="p-4 md:p-20">
        <div class="mx-auto">
          <ImageCarousel client:load />
        </div>
      </div>
    </section>
    <section id="contact-us" class="px-4 md:px-20 py-10 ">
      <div class="container mx-auto flex flex-col md:flex-row justify-between items-start gap-10">
        <div class="w-full md:w-1/2 space-y-4 p-4 md:p-10 text-center md:text-left">
          <span class="text-5xl md:text-6xl font-extrabold text-primary-green">Contact Us</span>
          <div class="max-w-lg mx-auto md:mx-0">
            Please feel free to reach out to us in case you have any queries or
            complaints. Once we have received any complaints or queries, we will
            reach out to you.
          </div>
        </div>
        <div class="w-full md:w-1/2">
          <div class="flex items-center justify-center">
            <form class="flex flex-col gap-4 w-full max-w-md">
              <input
                type="text"
                name="firstName"
                placeholder="First Name"
                class="form-input"
              />
              <input
                type="email"
                name="email"
                placeholder="Email"
                class="form-input"
              />
              <input
                type="tel"
                name="tele"
                placeholder="Phone Number"
                class="form-input"
              />
              <textarea
                name="message"
                rows="4"
                placeholder="Message/Complaint"
                class="form-input"
              ></textarea>
              <button
                type="submit"
                class="rounded-lg text-white bg-primary-green px-6 py-3 text-sm font-semibold"
              >
                Submit
              </button>
            </form>
          </div>
        </div>
      </div>
    </section>
  </main>
</Layout>

<style>
  .form-input {
    @apply bg-[#EEF9EF] p-3 rounded-lg text-xs;
  }
</style>
