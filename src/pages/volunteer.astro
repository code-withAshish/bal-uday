---
import Layout from "../layouts/Layout.astro";
---

<Layout title="Bal Uday | Volunteer">
  <section id="volunteer-form" class="container mx-auto py-16 px-4">
    <div class="text-center pb-10">
      <h2 class="text-4xl md:text-5xl font-extrabold text-gray-800">
        Volunteer Form
      </h2>
      <p class="text-gray-500 mt-2 text-base">
        Join us and help make a difference.
      </p>
    </div>

    <div class="flex flex-col md:flex-row items-stretch justify-center gap-8">
      <!-- Form -->
      <form
        class="flex flex-col gap-4 w-full md:w-1/2 bg-white p-8 rounded-2xl shadow-lg border border-gray-200"
        action="/api/volunteer"
        method="post"
        enctype="multipart/form-data"
      >
        <input
          type="text"
          name="name"
          placeholder="Full Name*"
          class="form-input"
          required
        />
        <input
          type="text"
          name="contact"
          placeholder="Contact Details (Phone/Email)*"
          class="form-input"
          required
        />
        <input
          type="text"
          name="address"
          placeholder="Current Address*"
          class="form-input"
          required
        />
        <input
          type="text"
          name="qualification"
          placeholder="Qualification*"
          class="form-input"
          required
        />

        <textarea
          name="experience"
          rows="3"
          placeholder="Past Experience*"
          class="form-input"
          required></textarea>
        <textarea
          name="whyVolunteer"
          rows="3"
          placeholder="Why would you like to volunteer at Team Bal Uday?*"
          class="form-input"
          required></textarea>
        <textarea
          name="awarenessExperience"
          rows="3"
          placeholder="Any experience in awareness programs or teaching?*"
          class="form-input"
          required></textarea>

        <div>
          <label class="text-sm font-medium text-gray-700 block mb-1"
            >Upload your CV*</label
          >
          <input
            type="file"
            name="cv"
            accept=".pdf,.doc,.docx"
            class="form-input bg-white border border-gray-300"
            required
          />
        </div>

        <button
          type="submit"
          class="rounded-lg text-white bg-green-600 hover:bg-green-700 px-6 py-3 text-base font-semibold transition-all duration-200"
        >
          Submit
        </button>
      </form>

      <!-- Image + Quote -->
      <div
        class="hidden md:flex w-full md:w-1/2 flex-col items-center justify-center text-center gap-6"
      >
        <img
          src="/volunteer.jpg"
          alt="Volunteer team photo"
          class="rounded-2xl object-cover w-full max-h-[800px] shadow-md"
        />
        <blockquote class="text-lg italic text-gray-600 max-w-md">
          “The best way to find yourself is to lose yourself in the service of
          others.”
          <br />
          <span class="block mt-2 text-sm font-medium text-gray-500"
            >– Mahatma Gandhi</span
          >
        </blockquote>
      </div>
    </div>
  </section>
</Layout>

<style>
  .form-input {
    @apply bg-[#EEF9EF] p-3 rounded-lg text-sm text-gray-800 border border-gray-300 focus:outline-none focus:ring-2 focus:ring-green-500 transition duration-200;
  }
</style>

<script is:inline>
  window.addEventListener("DOMContentLoaded", () => {
    const urlParams = new URLSearchParams(window.location.search);

    if (urlParams.get("submitted") === "true") {
      alert("Thank you! Your form has been submitted successfully.");
    }

    if (urlParams.get("error") === "true") {
      alert("Oops! An error occurred: ");
    }

    // Remove query params after showing the alert
    window.history.replaceState({}, document.title, window.location.pathname);
  });
</script>
