<section id="donation-form" class="px-4 md:px-20 py-16 bg-[#F9FAFB]">
  <div class="text-center pb-12">
    <h2 class="text-4xl md:text-5xl font-extrabold text-gray-800">
      Donation Form
    </h2>
    <p class="text-gray-500 mt-2">Your support can make a difference.</p>
  </div>

  <div
    class="flex flex-col md:flex-row items-stretch justify-center gap-12 min-h-[600px]"
  >
    <!-- Form -->
    <form
      class="flex flex-col gap-4 w-full md:w-1/2 bg-white p-8 rounded-2xl shadow-xl border border-gray-200 h-full"
      action="/api/submitDonationForm"
      method="post"
      enctype="multipart/form-data"
    >
      <input
        type="text"
        name="name"
        placeholder="Full Name*"
        class="form-input"
        required
      />
      <textarea
        name="address"
        placeholder="Complete Address*"
        class="form-input"
        required></textarea>
      <div class="flex flex-col md:flex-row gap-4">
        <input
          type="text"
          name="postalCode"
          placeholder="Postal Code*"
          class="form-input flex-1"
          required
        />
        <input
          type="text"
          name="city"
          placeholder="City*"
          class="form-input flex-1"
          required
        />
      </div>
      <input
        type="email"
        name="email"
        placeholder="Email*"
        class="form-input"
        required
      />
      <input
        type="tel"
        name="mobile"
        placeholder="Mobile Number*"
        class="form-input"
        required
      />
      <input
        type="text"
        name="panCard"
        placeholder="PAN Card Number*"
        class="form-input"
        required
      />
      <label class="text-sm font-medium text-gray-700">
        Upload PAN Card Copy*
      </label>
      <input
        type="file"
        name="panCardCopy"
        accept=".pdf,.jpg,.jpeg,.png"
        class="form-input bg-white border border-gray-300"
        required
      />
      <button
        type="submit"
        class="rounded-lg text-white bg-green-600 hover:bg-green-700 px-6 py-3 text-sm font-semibold transition-all duration-200"
      >
        Submit
      </button>
    </form>

    <!-- Image instead of Quote -->
    <div class="w-full md:w-1/2 h-full flex items-center justify-center">
      <img
        src="/images/donation-illustration.jpg"
        alt="Donate to support those in need"
        class="rounded-2xl object-cover w-full h-[400px] md:h-full"
      />
    </div>
  </div>
</section>

<style>
  .form-input {
    @apply bg-[#EEF9EF] p-3 rounded-lg text-sm text-gray-800 border border-gray-300 focus:outline-none focus:ring-2 focus:ring-green-500;
  }
</style>
