---
import HindiFooter from "../components/HindiFooter.astro";
import HindiNavbar from "../components/HindiNavbar.astro";
interface Props {
  title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="hi" class="w-full">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content="Astro description" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <link
      rel="stylesheet"
      href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css"
    />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
  </head>
  <body class="min-w-screen">
    <HindiNavbar />
    <slot />
    <HindiFooter />
  </body>
</html>
<style is:global>
  @font-face {
    font-family: "TiroDevanagariHindi";
    src: url("/fonts/TiroDevanagariHindi.ttf") format("truetype");
    font-optical-sizing: auto;
  }
  * {
    margin: 0;
    padding: 0;
  }
  html {
    font-family: "TiroDevanagariHindi", sans-serif;
    scroll-behavior: smooth;
  }
</style>
